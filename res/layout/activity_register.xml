<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:background="@color/white"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	>
	<RelativeLayout
        android:id="@+id/h_login_part1"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:layout_marginTop="2dp" >

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/about_logo" />
    </RelativeLayout>
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="56.66999dip"
		android:layout_marginLeft="16.0dip"
		android:layout_marginTop="10.66999dip"
		android:layout_marginRight="16.0dip"
		>
		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/mobile_input"
			android:layout_centerVertical="true"
			>
		</ImageView>
		<EditText
			android:textSize="15.669985sp"
			android:textColor="@color/darkgray"
			android:textColorHint="#FF999999"
			android:id="@+id/phoneNumber"
			android:paddingLeft="34dip"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:hint="输入手机号"
			android:inputType="number"
			>
		</EditText>
	</RelativeLayout>
	<View
		android:background="@color/light_gray"
		android:layout_width="match_parent"
		android:layout_height="1.0px"
		android:layout_marginLeft="16.0dip"
		android:layout_marginRight="16.0dip"
		>
	</View>
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="56.66999dip"
		android:layout_marginLeft="16.0dip"
		android:layout_marginRight="16.0dip"
		>
		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/code"
			android:layout_centerVertical="true"
			>
		</ImageView>
		<EditText
			android:textSize="15.669985sp"
			android:textColor="@color/darkgray"
			android:textColorHint="#FF999999"
			android:id="@+id/verifyCode"
			android:paddingLeft="34dip"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:hint="输入验证码"
			android:inputType="number"
			>
		</EditText>
		<TextView
			android:textSize="13.3299885sp"
			android:textColor="#FFFF5A00"
			android:gravity="center"
			android:id="@+id/getVerifyCode"
			android:layout_width="96.0dip"
			android:layout_height="match_parent"
			android:text="获取验证码"
			android:layout_alignParentRight="true"
			>
		</TextView>
		
	</RelativeLayout>
	<View
		android:background="#FF999999"
		android:layout_width="match_parent"
		android:layout_height="1.0px"
		android:layout_marginLeft="16.0dip"
		android:layout_marginRight="16.0dip"
		>
	</View>
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="56.66999dip"
		android:layout_marginLeft="16.0dip"
		android:layout_marginRight="16.0dip"
		>
		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/password"
			android:layout_centerVertical="true"
			>
		</ImageView>
		<EditText
			android:textSize="15.669985sp"
			android:textColor="@color/darkgray"
			android:textColorHint="#FF999999"
			android:id="@+id/password"
			android:paddingLeft="34dip"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:hint="输入密码（不少于6个字符）"
			android:inputType="textPassword"
			>
		</EditText>
	</RelativeLayout>
	<View
		android:background="#FF999999"
		android:layout_width="match_parent"
		android:layout_height="1.0px"
		android:layout_marginLeft="16.0dip"
		android:layout_marginRight="16.0dip"
		>
	</View>
	<TextView
		android:textSize="18.0sp"
		android:textColor="@color/white"
		android:gravity="center"
		android:id="@+id/btn_register"
		android:background="@color/tab_frame_selected"
		android:layout_width="match_parent"
		android:layout_height="50.0dip"
		android:layout_marginLeft="16.0dip"
		android:layout_marginTop="50.66999dip"
		android:layout_marginRight="16.0dip"
		android:text="下一步"
		>
	</TextView>
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="0.0dip"
		android:layout_weight="1.0"
		>
	</TextView>
	<LinearLayout
		android:layout_gravity="center_horizontal"
		android:orientation="horizontal"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginBottom="50.0dip"
		>
		<CheckBox
			android:textSize="14.0dip"
			android:textColor="@color/light_gray"
			android:gravity="center_vertical"
			android:id="@+id/agree_item"
			android:paddingLeft="20.0dip"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginBottom="10.0dip"
			android:button="@drawable/customdrawablecheckbox"
			android:text="我已阅读并接受"
			>
		</CheckBox>
		<TextView
			android:textSize="14.0dip"
			android:id="@+id/items"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginBottom="10.0dip"
			android:text="蜕变App协议"
			>
		</TextView>
	</LinearLayout>
</LinearLayout>
