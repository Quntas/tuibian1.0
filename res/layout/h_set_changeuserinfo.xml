<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#fff"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/h_changeinfo_name"
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/regist_nickName"
                android:textColor="#333"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/change_nickName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="80dp"
                android:background="@null"
                android:ems="10"
                android:hint="@string/regist_mickName_text"
                android:inputType="textPersonName"
                android:maxLength="16"
                android:paddingTop="2dp"
                android:saveEnabled="true"
                android:textColor="#333"
                android:textColorHint="#BABABA"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/clean1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/change_nickName"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/l_clean1"
                android:visibility="gone" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="#E6E6E6" >
        </View>

        <RelativeLayout
            android:id="@+id/change_sex_layout"
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/regist_sex_textview"
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/regist_sex"
                android:textColor="#333"
                android:textSize="16sp" />

            <RadioGroup
                android:id="@+id/change_sex"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/change_sex_man"
                    android:layout_width="wrap_content"
                    android:checked="true"
                    android:text="@string/regist_sex_man"
                    android:textColor="#333"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/change_sex_woman"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="@string/regist_sex_woman"
                    android:textColor="#333"
                    android:textSize="16sp" />
            </RadioGroup>
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="#E6E6E6" >
        </View>
        
        <RelativeLayout
            android:id="@+id/h_changeinfo_birthday"
            android:layout_width="fill_parent"
            android:layout_marginLeft="20dp"
            android:layout_height="44dp" >
            <TextView
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/regist_birthday"
                android:textColor="#333"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/change_birthday"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="80dp"
                android:background="@null"
                android:digits="1234567890"
                android:ems="10"
                android:hint="请选择生日"
                android:inputType="phone"
                android:maxLength="11"
                android:paddingTop="2dp"
                android:saveEnabled="true"
                android:textColor="#333"
                android:textColorHint="#BABABA"
                android:textSize="16sp" />
        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="#E6E6E6" >
        </View>
        <RelativeLayout
            android:id="@+id/h_changeinfo_height"
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/regist_height"
                android:textColor="#333"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/change_height"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="80dp"
                android:background="@null"
                android:ems="10"
                android:hint="请输入身高 cm"
                android:inputType="phone"
                android:maxLength="16"
                android:paddingTop="2dp"
                android:saveEnabled="true"
                android:textColor="#333"
                android:textColorHint="#BABABA"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/clean_height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/change_height"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/l_clean1"
                android:visibility="gone" />
        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="#E6E6E6" >
        </View>
        <RelativeLayout
            android:id="@+id/h_changeinfo_weight"
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/regist_weight"
                android:textColor="#333"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/change_weight"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="80dp"
                android:background="@null"
                android:ems="10"
                android:hint="请输入体重 kg"
                android:inputType="phone"
                android:maxLength="16"
                android:paddingTop="2dp"
                android:saveEnabled="true"
                android:textColor="#333"
                android:textColorHint="#BABABA"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/clean_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/change_weight"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/l_clean1"
                android:visibility="gone" />
        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:background="#F8F8F8" >
        </View>

        <RelativeLayout
            android:id="@+id/h_changeinfo_phone"
            android:layout_width="fill_parent"
            android:layout_marginLeft="20dp"
            android:layout_height="44dp" >
            <TextView
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="联系电话"
                android:textColor="#333"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/change_phone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="80dp"
                android:background="@null"
                android:digits="1234567890"
                android:ems="10"
                android:hint="请输入联系电话"
                android:inputType="phone"
                android:maxLength="11"
                android:paddingTop="2dp"
                android:saveEnabled="true"
                android:textColor="#333"
                android:textColorHint="#BABABA"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/clean2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/change_phone"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/l_clean1"
                android:visibility="gone" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="#E6E6E6" >
        </View>

        <RelativeLayout
            android:id="@+id/h_changeinfo_qq"
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal" >
            <TextView
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/regist_qq"
                android:textColor="#333"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/change_qq"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="80dp"
                android:background="@null"
                android:digits="1234567890"
                android:ems="10"
                android:hint="@string/regist_qq_text"
                android:inputType="number"
                android:paddingTop="2dp"
                android:saveEnabled="true"
                android:textColor="#333"
                android:textColorHint="#BABABA"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/clean3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/change_qq"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/l_clean1"
                android:visibility="gone" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="#E6E6E6" >
        </View>

        <RelativeLayout
            android:id="@+id/h_changeinfo_email"
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal" >
            
            <TextView
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/regist_email"
                android:textColor="#333"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/change_email"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="80dp"
                android:background="@null"
                android:ems="10"
                android:hint="@string/regist_email_text"
                android:inputType="textEmailAddress"
                android:maxLength="30"
                android:paddingTop="2dp"
                android:saveEnabled="true"
                android:textColor="#333"
                android:textColorHint="#BABABA"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/clean4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/change_email"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/l_clean1"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp" >

        <Button
            android:id="@+id/change_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/h_change_pass_btn"
            android:textColor="@color/white"
            android:textSize="22sp" />
    </RelativeLayout>

</LinearLayout>